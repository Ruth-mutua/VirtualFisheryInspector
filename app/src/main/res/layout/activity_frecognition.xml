<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shfi"
    tools:context=".FRecognition">

    <TextView
        android:id="@+id/facialrecogn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fish Facial Recognition"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285"/>

    <TextView
        android:id="@+id/main_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/link"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="30dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/facialrecogn"
        app:layout_constraintStart_toStartOf="@+id/facialrecogn"
        app:layout_constraintTop_toBottomOf="@+id/facialrecogn" />


    <TextView
        android:id="@+id/main_hyperlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/hyperlink"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="30dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/main_link"
        app:layout_constraintStart_toStartOf="@+id/main_link"
        app:layout_constraintTop_toBottomOf="@+id/main_link" />

</androidx.constraintlayout.widget.ConstraintLayout>